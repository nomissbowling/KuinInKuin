+func inputStr(): []char
	var buf: []char :: #[@strBufSize]char
	var ptr: int :: 0
	while loop(true)
		var c: char :: @inputCharWithDelimiter()
		if(c = '\uFFFF')
			if(^buf = 0)
				throw 0xE9170008
			end if
			break loop
		end if
		if(c = '\0')
			if(^buf = 0)
				skip loop
			end if
			break loop
		end if
		if(ptr = ^buf)
			do buf :~ #[@strBufSize]char
		end if
		do buf[ptr] :: c
		do ptr :+ 1
	end while
	ret buf.sub(0, ptr)
end func

